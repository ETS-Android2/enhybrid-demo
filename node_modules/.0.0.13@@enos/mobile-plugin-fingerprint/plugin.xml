<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rim="http://www.blackberry.com/ns/widgets"
    id="mobile-plugin-fingerprint"
    version="0.0.12">
    <name>mobile-plugin-fingerprint</name>
    <description>为移动端混合框架提供了指纹解锁的功能。</description>
    <license>Apache 2.0</license>
    <keywords>cordova,fingerprint</keywords>
    <repo></repo>
    <issue></issue>

    <js-module src="www/FingerprintPlugin.js" name="FingerprintPlugin">
        <clobbers target="window.plugins.FingerprintPlugin" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <hook type="before_plugin_install" src="hook/android/scripts/beforePluginInstall.js" />
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="FingerprintPlugin">
                <param name="android-package" value="com.envisioncn.cordova.fingerprint.FingerprintPlugin"/>
            </feature>
        </config-file>
        <source-file src="src/android/com/envisioncn/cordova/fingerprint/FingerprintPlugin.java" target-dir="src/com/envisioncn/cordova/fingerprint" />
        <source-file src="src/android/com/envisioncn/cordova/fingerprint/FingerprintDialog.java" target-dir="src/com/envisioncn/cordova/fingerprint" />
        <source-file src="src/android/com/envisioncn/cordova/fingerprint/FingerprintHelper.java" target-dir="src/com/envisioncn/cordova/fingerprint" />
        <resource-file src="src/android/res/layout/enos_fingerprint_dialog.xml" target="res/layout/enos_fingerprint_dialog.xml" />
        <resource-file src="src/android/res/drawable/bg_round_white.xml" target="res/drawable/bg_round_white.xml" />
        <config-file target="AndroidManifest.xml" parent="/manifest" mode="merge">            
            <uses-permission android:name="android.permission.USE_FINGERPRINT"/>    
        </config-file>
        <config-file target="app/src/main/res/values/strings.xml" parent="/resources">
            <string name="enos_fingerprint_dialog_cancel">取消</string>
            <string name="enos_fingerprint_dialog_submit">输入密码</string>
            <string name="enos_fingerprint_dialog_tip_mode_one">请进行指纹验证</string>
            <string name="enos_fingerprint_dialog_tip_mode_two">请再试一次</string>
        </config-file>
        
        <config-file target="app/src/main/res/values-en/strings.xml" parent="/resources">
            <string name="enos_fingerprint_dialog_cancel">Cancel</string>
            <string name="enos_fingerprint_dialog_submit">Enter password</string>
            <string name="enos_fingerprint_dialog_tip_mode_one">Please fingerprint verify</string>
            <string name="enos_fingerprint_dialog_tip_mode_two">Try again</string>
        </config-file>
        
        <config-file target="app/src/main/res/values-zh/strings.xml" parent="/resources">
            <string name="enos_fingerprint_dialog_cancel">取消</string>
            <string name="enos_fingerprint_dialog_submit">输入密码</string>
            <string name="enos_fingerprint_dialog_tip_mode_one">请进行指纹验证</string>
            <string name="enos_fingerprint_dialog_tip_mode_two">请再试一次</string>
        </config-file>

        <config-file target="app/src/main/res/values/styles.xml" parent="/resources">
            <style name="EnosFingerprintDialog" parent="@android:style/Theme.Dialog">
                <item name="android:windowFrame">@null</item>
                <!--边框-->
                <item name="android:windowIsFloating">true</item>
                <!--是否浮现在activity之上-->
                <item name="android:windowIsTranslucent">false</item>
                <!--半透明-->
                <item name="android:windowNoTitle">true</item>
                <!--无标题-->
                <item name="android:windowBackground">@android:color/transparent</item>
                <!--背景透明-->
                <item name="android:backgroundDimEnabled">true</item>
                <!--模糊-->
            </style>
        </config-file>
     </platform>

     <!-- ios -->
     <platform name="ios">
         <config-file target="config.xml" parent="/*">
             <feature name="FingerprintPlugin">
                 <param name="ios-package" value="FingerprintPlugin" />
             </feature>
         </config-file>
         <header-file src="src/ios/FingerprintPlugin.h" />
         <source-file src="src/ios/FingerprintPlugin.m" />
     </platform>

</plugin>
