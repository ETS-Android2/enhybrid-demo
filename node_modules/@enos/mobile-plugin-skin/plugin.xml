<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rim="http://www.blackberry.com/ns/widgets"
    id="mobile-plugin-skin"
    version="0.0.13">
    <name>mobile plugin skin</name>
    <description>提供全局切换App样式的功能。</description>
    <license>Apache 2.0</license>
    <keywords>cordova,skin</keywords>
    <repo></repo>
    <issue></issue>

    <js-module src="www/SwitchSkinPlugin.js" name="SwitchSkinPlugin">
        <clobbers target="window.plugins.SwitchSkinPlugin" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <hook type="before_plugin_install" src="hook/android/scripts/beforePluginInstall.js" />
        <hook type="before_plugin_uninstall" src="hook/android/scripts/beforePluginUninstall.js" />
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="SwitchSkinPlugin">
                <param name="android-package" value="com.envisioncn.cordova.skin.SwitchSkinPlugin"/>
            </feature>
        </config-file>
        <framework src="skin.support:skin-support:3.1.0-beta1" />
        <source-file src="src/android/com/envisioncn/cordova/skin/AppSkinHandler.java" target-dir="src/com/envisioncn/cordova/skin" />
        <source-file src="src/android/com/envisioncn/cordova/skin/SwitchSkinPlugin.java" target-dir="src/com/envisioncn/cordova/skin" />
    </platform>

    <!-- ios -->
    <platform name="ios">
        <hook type="before_plugin_install" src="hook/ios/scripts/beforePluginInstall.js" />
        <hook type="before_plugin_uninstall" src="hook/ios/scripts/beforePluginUninstall.js" />
         <config-file target="config.xml" parent="/*">
             <feature name="SwitchSkinPlugin">
                 <param name="ios-package" value="SwitchSkinPlugin" />
             </feature>
         </config-file>
        <source-file src="src/ios/class/SakuraKit/Base/TXSakura.h" />
        <source-file src="src/ios/class/SakuraKit/Base/TXSakura.m" />
        <source-file src="src/ios/class/SakuraKit/Base/TXSakuraManager.h" />
        <source-file src="src/ios/class/SakuraKit/Base/TXSakuraManager.m" />
        <source-file src="src/ios/class/SakuraKit/Components/TXSakuraApplication.h" />
        <source-file src="src/ios/class/SakuraKit/Components/TXSakuraApplication.m" />
        <source-file src="src/ios/class/SakuraKit/Components/TXSakuraBar.h" />
        <source-file src="src/ios/class/SakuraKit/Components/TXSakuraBar.m" />
