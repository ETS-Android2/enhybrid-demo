        <source-file src="src/ios/class/SakuraKit/Components/TXSakuraImageView.m" />
        <source-file src="src/ios/class/SakuraKit/Components/TXSakuraIndicatorView.h" />
        <source-file src="src/ios/class/SakuraKit/Components/TXSakuraIndicatorView.m" />
        <source-file src="src/ios/class/SakuraKit/Components/TXSakuraLabel.h" />
        <source-file src="src/ios/class/SakuraKit/Components/TXSakuraLabel.m" />
