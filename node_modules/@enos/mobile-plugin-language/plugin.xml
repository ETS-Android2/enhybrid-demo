<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rim="http://www.blackberry.com/ns/widgets"
    id="mobile-plugin-language"
    version="0.0.9">
    <name>mobile plugin language</name>
    <description>为移动端混合框架应用提供切换语言的能力。</description>
    <license>Apache 2.0</license>
    <keywords>cordova,container</keywords>
    <repo></repo>
    <issue></issue>

    <js-module src="www/SwitchLanguagePlugin.js" name="SwitchLanguagePlugin">
        <clobbers target="window.plugins.SwitchLanguagePlugin" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <hook type="before_plugin_install" src="hook/android/scripts/beforePluginInstall.js" />
        <hook type="before_plugin_uninstall" src="hook/android/scripts/beforePluginUninstall.js" />
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="SwitchLanguagePlugin">
                <param name="android-package" value="com.envisioncn.cordova.language.SwitchLanguagePlugin"/>
            </feature>
        </config-file>
        <framework src="com.google.code.gson:gson:2.2.4" />
        <source-file src="src/android/com/envisioncn/cordova/language/LocaleManager.java" target-dir="src/com/envisioncn/cordova/language" />
        <source-file src="src/android/com/envisioncn/cordova/language/SwitchLanguagePlugin.java" target-dir="src/com/envisioncn/cordova/language" />
     </platform>

     <!-- ios -->
     <platform name="ios">
         <hook type="before_plugin_install" src="hook/ios/scripts/beforePluginInstall.js" />
         <hook type="before_plugin_uninstall" src="hook/ios/scripts/beforePluginUninstall.js" />
         <config-file target="config.xml" parent="/*">
             <feature name="SwitchLanguagePlugin">
                 <param name="ios-package" value="SwitchLanguagePlugin" />
             </feature>
         </config-file>
         <source-file src="src/ios/class/DAConfig.h" />
         <source-file src="src/ios/class/DAConfig.m" />
         <source-file src="src/ios/class/NSBundle+DAUtils.h" />
         <source-file src="src/ios/class/NSBundle+DAUtils.m" />
         <source-file src="src/ios/class/SwitchLanguagePlugin.h" />
         <source-file src="src/ios/class/SwitchLanguagePlugin.m" />
     </platform>
</plugin>
