<?xml version='1.0' encoding='utf-8'?>
<widget id="com.envision.demo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SharedDataPlugin">
        <param name="android-package" value="com.envisioncn.cordova.shareddata.SharedDataPlugin" />
    </feature>
    <feature name="NaviBarPlugin">
        <param name="android-package" value="com.envisioncn.cordova.naviBar.NaviBarPlugin" />
    </feature>
    <feature name="LoggingPlugin">
        <param name="android-package" value="com.envisioncn.cordova.log.LoggingPlugin" />
    </feature>
    <feature name="ShellRouterPlugin">
        <param name="android-package" value="com.envisioncn.cordova.router.ShellRouterPlugin" />
    </feature>
    <feature name="EnvContext">
        <param name="android-package" value="com.envisioncn.cordova.context.EnvContextPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>hybrid-demo</name>
    <description>
        这是一个能够创建手机端混合应用的模版。
    </description>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="ShowTitle" value="true" />
    <preference name="BackgroundColor" value="0x00000000" />
    <preference name="Orientation" value="portrait" />
    <preference name="HideKeyboardFormAccessoryBar" value="true" />
</widget>
