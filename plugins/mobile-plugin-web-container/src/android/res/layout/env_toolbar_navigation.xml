<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/left_icon_corner"
        android:layout_width="60dip"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:clickable="true">

        <com.envisioncn.cordova.webContainer.EnvIconView
            android:id="@+id/left_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="?attr/envNaviIconColor"
            android:textSize="?attr/envNaviIconSize"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="?attr/envNaviTitleTextColor"
        android:textSize="?attr/envNaviTitleTextSize"/>

    <RelativeLayout
        android:id="@+id/right_icon_corner"
        android:layout_width="60dip"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:clickable="true">

        <com.envisioncn.cordova.webContainer.EnvIconView
            android:id="@+id/right_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="?attr/envNaviIconColor"
            android:textSize="?attr/envNaviIconSize"/>

    </RelativeLayout>

</LinearLayout>
